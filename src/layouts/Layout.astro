---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="La Cuarta - Noticias de Chile" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title} | La Cuarta</title>
		<link href="https://fonts.googleapis.com/css2?family=Anton&display=swap" rel="stylesheet">
	</head>
	<body class="bg-gray-100 min-h-screen flex flex-col">
		<header class="bg-black text-white shadow-lg sticky top-0 z-50">
			<nav class="container mx-auto px-4">
				<div class="flex justify-between items-center h-16">
					<!-- Menú izquierdo -->
					<div class="hidden md:flex items-center space-x-1">
						<a href="/nacional" class="nav-link group">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
								<path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
							</svg>
							<span>Nacional</span>
						</a>
						<a href="/deportes" class="nav-link group">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
								<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
							</svg>
							<span>Deportes</span>
						</a>
						<a href="/espectaculos" class="nav-link group">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
								<path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
							</svg>
							<span>Espectáculos</span>
						</a>
					</div>
					
					<!-- Logo central -->
					<a href="/" class="flex items-center justify-center flex-shrink-0 transition-transform hover:scale-105">
						<h1 class="font-anton text-4xl text-red-600 tracking-wider">LA CUARTA</h1>
					</a>
					
					<!-- Menú derecho -->
					<div class="hidden md:flex items-center space-x-1" id="auth-menu">
						<!-- Este div será reemplazado por JavaScript -->
					</div>

					<!-- Menú móvil -->
					<div class="md:hidden flex items-center">
						<button id="mobile-menu-button" class="p-2 rounded-md hover:bg-gray-700 focus:outline-none">
							<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
							</svg>
						</button>
					</div>
				</div>

				<!-- Menú móvil expandible -->
				<div id="mobile-menu" class="hidden md:hidden pb-4">
					<div class="flex flex-col space-y-2">
						<a href="/nacional" class="mobile-nav-link">Nacional</a>
						<a href="/deportes" class="mobile-nav-link">Deportes</a>
						<a href="/espectaculos" class="mobile-nav-link">Espectáculos</a>
						<div id="mobile-auth-menu">
							<!-- Este div será reemplazado por JavaScript -->
						</div>
					</div>
				</div>
			</nav>
		</header>

		<main class="flex-grow container mx-auto px-4 py-8">
			<slot />
		</main>

		<footer class="bg-black text-white py-12">
			<div class="container mx-auto px-4">
				<div class="grid grid-cols-1 md:grid-cols-4 gap-8">
					<div>
						<h3 class="font-anton text-2xl text-red-600 mb-4">LA CUARTA</h3>
						<p class="text-gray-400">El diario popular de Chile</p>
					</div>
					<div>
						<h4 class="font-semibold mb-4">Secciones</h4>
						<ul class="space-y-2 text-gray-400">
							<li><a href="/nacional" class="hover:text-red-500 transition">Nacional</a></li>
							<li><a href="/deportes" class="hover:text-red-500 transition">Deportes</a></li>
							<li><a href="/espectaculos" class="hover:text-red-500 transition">Espectáculos</a></li>
							<li><a href="/tendencias" class="hover:text-red-500 transition">Tendencias</a></li>
						</ul>
					</div>
					<div>
						<h4 class="font-semibold mb-4">La Empresa</h4>
						<ul class="space-y-2 text-gray-400">
							<li><a href="/nosotros" class="hover:text-red-500 transition">Quiénes Somos</a></li>
							<li><a href="/contacto" class="hover:text-red-500 transition">Contacto</a></li>
							<li><a href="/privacidad" class="hover:text-red-500 transition">Política de Privacidad</a></li>
						</ul>
					</div>
					<div>
						<h4 class="font-semibold mb-4">Síguenos</h4>
						<div class="flex space-x-4">
							<a href="#" class="text-gray-400 hover:text-red-500 transition">
								<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/></svg>
							</a>
							<a href="#" class="text-gray-400 hover:text-red-500 transition">
								<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm3 8h-1.35c-.538 0-.65.221-.65.778v1.222h2l-.209 2h-1.791v7h-3v-7h-2v-2h2v-2.308c0-1.769.931-2.692 3.029-2.692h1.971v3z"/></svg>
							</a>
							<a href="#" class="text-gray-400 hover:text-red-500 transition">
								<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
							</a>
						</div>
					</div>
				</div>
				<div class="mt-8 pt-8 border-t border-gray-800 text-center text-gray-400">
					<p>&copy; 2024 La Cuarta. Todos los derechos reservados.</p>
				</div>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--accent: 224, 0, 0;
		--accent-light: 255, 100, 100;
	}
	html {
		font-family: system-ui, sans-serif;
		background: #f6f6f6;
	}
	.font-anton {
		font-family: 'Anton', sans-serif;
	}
	.nav-link {
		@apply px-3 py-2 rounded-md text-sm font-medium flex items-center space-x-1
		       text-gray-300 hover:text-white hover:bg-red-600/20
		       transition-all duration-200 ease-in-out relative;
	}
	.nav-link::after {
		content: '';
		@apply absolute bottom-0 left-0 w-0 h-0.5 bg-red-600
		       transition-all duration-200 ease-in-out;
	}
	.nav-link:hover::after {
		@apply w-full;
	}
	.nav-link.active {
		@apply text-white bg-red-600;
	}
	.mobile-nav-link {
		@apply block px-3 py-2 rounded-md text-base font-medium
		       text-gray-300 hover:text-white hover:bg-red-600/20
		       transition-all duration-200;
	}
	.user-dropdown {
		@apply origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg
		       bg-white ring-1 ring-black ring-opacity-5 divide-y divide-gray-100
		       focus:outline-none;
	}
</style>

<script>
	// Manejo del menú de autenticación
	const updateAuthMenu = () => {
		const authMenu = document.getElementById('auth-menu');
		const mobileAuthMenu = document.getElementById('mobile-auth-menu');
		if (!authMenu || !mobileAuthMenu) return;

		const authToken = localStorage.getItem('authToken');
		if (authToken) {
			const user = JSON.parse(authToken);
			const userInitial = user.nombre.charAt(0).toUpperCase();

			// Menú de escritorio
			authMenu.innerHTML = `
				<div class="relative" id="user-menu">
					<button class="flex items-center space-x-2 text-sm focus:outline-none" id="user-menu-button">
						<div class="w-8 h-8 rounded-full bg-red-600 flex items-center justify-center text-white font-bold">
							${userInitial}
						</div>
						<span class="hidden lg:block">${user.nombre} ${user.apellido}</span>
						<svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
						</svg>
					</button>
					<div class="user-dropdown hidden" role="menu" id="user-dropdown">
						<div class="py-1" role="none">
							<a href="/dashboard" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">
								<svg class="mr-3 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
												d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
								</svg>
								Mi Cuenta
							</a>
							<button class="w-full flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" id="desktop-logout">
								<svg class="mr-3 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
												d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
								</svg>
								Cerrar Sesión
							</button>
						</div>
					</div>
				</div>
			`;

			// Menú móvil
			mobileAuthMenu.innerHTML = `
				<a href="/dashboard" class="mobile-nav-link">Mi Cuenta</a>
				<button class="w-full text-left mobile-nav-link" id="mobile-logout">Cerrar Sesión</button>
			`;
		} else {
			// Menú de escritorio
			authMenu.innerHTML = `
				<a href="/register" class="nav-link group">
					<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
									d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
					</svg>
					<span>Registrarse</span>
				</a>
				<a href="/login" class="nav-link group">
					<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
									d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
					</svg>
					<span>Iniciar Sesión</span>
				</a>
			`;

			// Menú móvil
			mobileAuthMenu.innerHTML = `
				<a href="/register" class="mobile-nav-link">Registrarse</a>
				<a href="/login" class="mobile-nav-link">Iniciar Sesión</a>
			`;
		}

		// Eventos para el menú de usuario
		const userMenuButton = document.getElementById('user-menu-button');
		const userDropdown = document.getElementById('user-dropdown');
		const desktopLogout = document.getElementById('desktop-logout');
		const mobileLogout = document.getElementById('mobile-logout');

		if (userMenuButton && userDropdown) {
			userMenuButton.addEventListener('click', () => {
				const isHidden = userDropdown.classList.contains('hidden');
				userDropdown.classList.toggle('hidden', !isHidden);
				userMenuButton.querySelector('svg').style.transform = isHidden ? 'rotate(180deg)' : '';
			});

			// Cerrar el dropdown al hacer clic fuera
			document.addEventListener('click', (event) => {
				const userMenu = document.getElementById('user-menu');
				if (userMenu && !userMenu.contains(event.target as Node)) {
					userDropdown.classList.add('hidden');
					userMenuButton.querySelector('svg').style.transform = '';
				}
			});
		}

		// Eventos de logout
		const handleLogout = () => {
			localStorage.removeItem('authToken');
			document.cookie = 'authToken=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
			window.location.href = '/';
		};

		if (desktopLogout) desktopLogout.addEventListener('click', handleLogout);
		if (mobileLogout) mobileLogout.addEventListener('click', handleLogout);
	};

	// Manejo del menú móvil
	const mobileMenuButton = document.getElementById('mobile-menu-button');
	const mobileMenu = document.getElementById('mobile-menu');

	if (mobileMenuButton && mobileMenu) {
		mobileMenuButton.addEventListener('click', () => {
			mobileMenu.classList.toggle('hidden');
		});
	}

	// Actualizar menú al cargar y cuando cambie el localStorage
	document.addEventListener('DOMContentLoaded', updateAuthMenu);
	window.addEventListener('storage', updateAuthMenu);

	// Marcar el enlace activo
	const path = window.location.pathname;
	document.querySelectorAll('.nav-link').forEach(link => {
		if (link instanceof HTMLAnchorElement && path === link.pathname) {
			link.classList.add('active');
		}
	});
</script>